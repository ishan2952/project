@model IEnumerable<WebApplication2.Models.State>

@{
    ViewBag.Title = "Index";
}

<h2 style="color:white">List of States</h2>

<p>
    @Html.ActionLink("Create New", "CreateNewState")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StateCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StateName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstZipCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastZipCode)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StateCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StateName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstZipCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastZipCode)
        </td>
        <td>
            <a href="EditState?id=@item.StateCode" style="color:white">Edit</a> |
            <a href="ShowState?id=@item.StateCode" style="color:white">Details</a> |
            <a href="DeleteState?id=@item.StateCode" style="color:white">Delete</a>
        </td>
    </tr>
}

</table>
